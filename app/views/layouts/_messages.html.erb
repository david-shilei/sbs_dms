<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <% if name == "error" then name = "danger" end %>
    <div class="container">
      <div class="alert alert-<%= name %>" >
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    </div>
  <% end %>
<% end %>
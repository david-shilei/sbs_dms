<div class="panel panel-default">
  <ol class="breadcrumb">
    <li><%= link_to "Home", categories_path %></li>
    <li class="active">Users Index</li>
  </ol>

  <div class="panel-body">
    <%= link_to "Users awaiting approval", users_path, :approved => "false" %>

    <div class="container">
      <table class="table">
        <tr>
          <th> Username </th>
          <th> Full Name </th>
          <th> Admin Status </th>
          <th> Approved </th>
          <th> Actions </th>
        </tr>
        <div style="margin-left: 26px"><%= paginate @users %></div>
        <% @users.each do |user| %>
        <tr>
          <td> <%= link_to user.username, user %> </td>
          <td> <%= user.full_name %> </td>
          <td> <%= user.is_admin %> </td>
          <td>
              <%= user.approved %>
              <%= link_to "Approve", approve_user_path(user), :class => "btn btn-primary btn-xs" unless user.approved %>
          </td>
          <td> 
            <% if user.is_admin? %>
              <%= link_to "Demote", admin_status_user_path(user), :class => "btn btn-primary btn-xs" %>
            <% else %>
              <%= link_to "Make Admin", admin_status_user_path(user), :class => "btn btn-primary btn-xs" %>
            <% end %>
            <%= link_to "Edit", edit_user_path(user), :class => "btn btn-primary btn-xs" %>
            <%= link_to "Delete", user_path(user), method: :delete, :class => "btn btn-primary btn-xs" %>
          </td>
        </tr>
        <% end %> 
      </table>
    </div>
  </div>
</div> 
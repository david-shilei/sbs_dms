<table class="table table-list-items">
  <% subcategories.each do |subcategory| %>
    <% if category_viewable?(subcategory) %>
      <tr class="list-item" href="<%= category_path(subcategory, view_style: "list") %>">
        <td> 
          <%= image_tag "icons/icon_folder_50.png" %>
          <b> <%= subcategory.name %> </b>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
<div class="categories_grid">
  <div style="margin-left: 26px"> <%= paginate @documents %> </div>
  <!-- Show a tile for each subcategory -->
  <% if @subcategories %>
    <% @subcategories.each do |subcategory| %>
      <%= render partial: "categories/category_tile", locals: {subcategory: subcategory} %>
    <% end %>
  <% end %>
  <!-- Show a tile for each document -->
  <% if @documents %>
    <% @documents.each do |doc| %>
      <% if !doc.current_revision.nil? %>
        <%= render partial: "documents/document_tile", locals: { doc: doc } %>
      <% end %>
    <% end %> 
  <% end %>
</div>